<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DocDetail">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="84dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/image_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_menu_camera"
            tools:layout_editor_absoluteY="53dp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/docName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="24dp"
            android:selectAllOnFocus="true"
            app:boxStrokeColor="@color/outline_color">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/docNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/docName"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/docNo"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:selectAllOnFocus="true"
            app:boxStrokeColor="@color/outline_color">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/docNoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/docNo"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/issueDate"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="4dp"
                android:selectAllOnFocus="true"
                app:boxStrokeColor="@color/outline_color"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/issueDateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/issueDate"
                    android:inputType="text" />



            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/expDate"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="24dp"
                android:selectAllOnFocus="true"
                app:boxStrokeColor="@color/outline_color"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/expDateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/expDate"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/uploadBtn"
            android:textAppearance="@style/ThemeOverlay.AppCompat.Dark"
            android:textSize="20sp"
            android:background="@drawable/txt_border"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:selectAllOnFocus="true" />





    </LinearLayout>

